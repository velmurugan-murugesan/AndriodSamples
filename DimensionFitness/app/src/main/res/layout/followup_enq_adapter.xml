<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/followups_enq_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:lines="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/followup_buttonCall" />

        <TextView
            android:id="@+id/followup_enq_address"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:lines="1"
            android:layout_below="@+id/followups_enq_name"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/followup_buttonCall" />



        <Button
            android:id="@+id/followup_buttonCall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/call"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toStartOf="@+id/followup_buttonMessage" />



        <Button
            android:id="@+id/followup_buttonMessage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="@drawable/message" />
    </RelativeLayout>

</RelativeLayout>
