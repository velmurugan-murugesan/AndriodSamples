<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/bottomsheet_content"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            style="@style/TextNormal"
            android:text="SORT BY "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_sort_by"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            />

    <TextView
            style="@style/TextTitle"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:visibility="invisible"
            android:background="@color/text_color"
            android:gravity="center_vertical"
            android:id="@+id/text_div_1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_sort_by"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <TextView
            style="@style/TextTitle"
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ed_height"
            android:gravity="center_vertical"
            android:id="@+id/text_sort_name"
            android:tag="NAME"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_sort_by"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>

    <TextView
            style="@style/TextTitle"
            android:text="Date"
            android:tag="DATE"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ed_height"
            android:gravity="center_vertical"
            android:id="@+id/text_sort_date"
            app:layout_constraintTop_toBottomOf="@+id/text_sort_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>

    <TextView
            style="@style/TextTitle"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/text_color"
            android:gravity="center_vertical"
            android:id="@+id/text_div_2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_sort_date"
            app:layout_constraintStart_toStartOf="parent"
            />

    <TextView
            android:tag="CANCEL"
            style="@style/TextTitle"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ed_height"
            android:gravity="center_vertical"
            android:id="@+id/text_sort_cancel"
            app:layout_constraintTop_toBottomOf="@+id/text_div_2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>