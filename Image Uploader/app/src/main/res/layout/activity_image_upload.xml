<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/layout_image_upload"
        tools:context=".features.imageupload.ImageUploadActivity">

    <TextView
            android:id="@+id/et_partno"
            android:layout_width="0dp"
            style="@style/TextTitle"
            android:textColor="@color/dark_blue"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:text="@string/comments"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
    />

    <EditText
            android:id="@+id/et_suppliercode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            style="@style/EditNormal"
            android:focusableInTouchMode="true"
            android:textColor="@color/grey_dark"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:gravity="top"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="8"
            android:lines="5"
            android:padding="5dp"
            android:scrollHorizontally="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_partno"/>


    <ImageView
            android:id="@+id/image_viewer"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/btn_upload"
            app:layout_constraintEnd_toEndOf="parent"

            app:srcCompat="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/img_select_image" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_upload"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_small"
            style="@style/ButtonNormalMaterial"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/upload"
            android:backgroundTint="@color/dark_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_menu_upload"/>

    <com.imageuploader.widgets.AppToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Upload Image"
            app:right_icon_visible="false"
            app:left_icon_visible="true"
            app:left_icon_background="@drawable/back_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
    </com.imageuploader.widgets.AppToolbar>


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/camera_icon"
            android:id="@+id/img_select_image"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_suppliercode"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            android:visibility="visible"
            tools:itemCount="6"
            tools:listitem="@layout/hero_item"
            app:layout_constraintTop_toBottomOf="@+id/img_select_image"
            android:layout_marginBottom="8dp"
            android:id="@+id/recyclerview_selected"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_upload"/>

    <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:indeterminateTintMode="multiply"
            android:indeterminateTint="@color/dark_blue"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:layout_alignParentBottom="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>