<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="@dimen/view_height">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/viewAboveImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_200"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textPaintBumper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_height"
        android:layout_marginEnd="@dimen/view_height"
        android:gravity="center"
        android:padding="@dimen/space_medium"
        android:text="Paint Bumper"
        android:textSize="45sp"
        android:fontFamily="@font/lobster_regular"
        android:layout_marginTop="@dimen/space_small"
        android:textColor="@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edTextUsername"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_height_small"
        android:textColor="@color/text_color"
        android:background="@color/viewBackgroundDark"
        android:hint="Username"
        tools:text="@tools:sample/full_names"
        android:layout_margin="@dimen/space_medium"
        android:padding="@dimen/space_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textPaintBumper" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/loginBackgroundImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/login_image"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLogin"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_height_small"
        android:layout_marginTop="@dimen/space_large"
        android:backgroundTint="@color/purple_700"
        android:text="LOGIN"
        app:cornerRadius="@dimen/view_height_small"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/edTextUsername"
        app:layout_constraintStart_toStartOf="@+id/edTextUsername"
        app:layout_constraintTop_toBottomOf="@id/edTextUsername" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="@+id/loginBackgroundImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20"
        app:srcCompat="@drawable/paint_bumper_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>